generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CareerSpells {
  id           String       @id @default(uuid())
  clubId       String
  from         String?
  until        String?
  apps         Int?
  goals        Int?
  loan         Boolean
  playingLevel PlayingLevel
  playerId     String
  clubs        Clubs        @relation(fields: [clubId], references: [id])
  players      Players      @relation(fields: [playerId], references: [id])
}

model Clubs {
  id           String         @id @default(uuid())
  name         String
  wikipediaUrl String
  imageUrl     String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  careerSpells CareerSpells[]

  @@unique([name, wikipediaUrl])
}

model Players {
  id           String         @id @default(uuid())
  name         String
  fullName     String?
  wikipediaUrl String
  imageUrl     String
  dateOfBirth  String?
  placeOfBirth String?
  height       String?
  position     String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt 
  careerSpells CareerSpells[]

  @@unique([name, wikipediaUrl])
}

enum PlayingLevel {
  YOUTH
  SENIOR
  INTERNATIONAL
}
